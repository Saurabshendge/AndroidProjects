<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/cardview_dark_background"
    tools:context=".SQLiteExample">

    <TextView
        android:id="@+id/titletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter the details below"
        android:textSize="30dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/empNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee Number"
        android:textSize="30dp"
        android:layout_below="@+id/titletext"
        android:inputType="number"
        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textSize="24dp"
        android:layout_below="@+id/empNo"
        android:inputType="textPersonName"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact"
        android:textSize="24dp"
        android:layout_below="@+id/name"
        android:inputType="number"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date of Birth"
        android:textSize="24dp"
        android:layout_below="@+id/contact"
        android:inputType="date"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/insertbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob"
        android:layout_margin="10dp"
        android:text="Insert New"
        android:textSize="24dp" />

    <Button
        android:id="@+id/viewbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/insertbtn"
        android:layout_margin="10dp"
        android:text="View"
        android:textSize="24dp" />

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewbtn"
        android:layout_margin="10dp"
        android:text="Update"
        android:textSize="24dp" />

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/updatebtn"
        android:layout_margin="10dp"
        android:text="Delete"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deletebtn"
        android:layout_margin="20dp"
        android:textSize="16dp"
        android:text="Note : For Delete only Provide Emp ID"/>

</RelativeLayout>